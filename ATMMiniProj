balance = 100

def check_balance():
    print("Your balance is:",balance)
    pass

def deposit(amount):
    global balance
    
    balance = balance + amount
    if amount <= 0:
        print("Invalid amount. Please enter an amount greater than 0.")
    else:
        print(f"Deposited {amount}. New balance: {balance}")
    pass

def withdraw(amount):
    global balance
    if amount <= 0:
        print("Invalid amount. Please enter an amount greater than 0")
    elif amount > balance:
        print("Insufficient funds.")
    else:
        balance = balance - amount
        print(f"Withdrawn {amount}. New balance: {balance}")
    pass

while True:
    print("\n--- ATM Menu ---")
    print("1. Check Balance")
    print("2. Make a Deposit")
    print("3. Make a Withdrawl")
    print("4. Exit")

    choice = input("Choose an option (1-4):")

    if choice == "1":
        check_balance()
        pass

    elif choice == "2":
        amount = int(input("Please enter amount you wish to deposit: "))
        deposit(amount)
        pass

    elif choice == "3":
        amount = int(input("Please enter the amount you wish to withdraw: "))
        withdraw(amount)
        pass

    elif choice == "4":
        print("Goodbye!")
        break
    
    else:
        print("Invalid choice. Please try again.")